{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@mkraust/tsconfig/base.json",
    "compilerOptions": {
        "types": [
            "node",
            "./resources/js/main"
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/js/app/*"],
            "@metronic": ["resources/js/_metronic"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx"
    ]
}
