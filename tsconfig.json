{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "esnext",
        "strict": true,
        "module": "esnext",
        "lib": ["es2016", "dom"],
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "types": [
            "node",
            "./resources/js/main"
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/js/app/*"],
            "@metronic": ["resources/js/_metronic"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx"
    ]
}
